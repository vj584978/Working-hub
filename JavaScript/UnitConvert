        <script>
            function tempCk(x)
            {
                var tempC=document.getElementById("temp0").value;
                var tempF=document.getElementById("temp1").value;
                if(tempC<-273.16 || tempF<-459.68)
                {
                    alert('超過絕對零度');
                    for(var i=0;i<=2;i++)
                    {
                        document.getElementById("temp"+i).value="";
                    }
                }else
                {
                    tempCc(x);
                }
            }
            function tempCc(x) //微暴力寫法
            {   
                var tempin = document.getElementsByName('temp');
                var tempA=[tempin[0].value,tempin[1].value,tempin[2].value];
                var tempOut=[];
                if(x===0)
                {
                    tempOut=[tempA[x],tempA[x]*1.8+32,Number(tempA[x])+273.15];
                }else if(x===1)
                {
                    tempOut=[(Number(tempA[x])-32)/1.8,tempA[x],(Number(tempA[x])-32)/1.8+273.15];
                }else
                {
                    tempOut=[Number(tempA[x])-273.15,(Number(tempA[x])-273.15)*1.8+32,tempA[x]];
                }
                for(var i=0;i<=2;i++)
                {
                    document.getElementById("temp"+i).value=(Math.floor(tempOut[i]*100)/100);
                }
            }
            function weigthC()
            {

            }
            function lengthCC()
            {
               
            }
        </script>
